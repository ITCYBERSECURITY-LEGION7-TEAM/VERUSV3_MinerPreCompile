# Main menu
show_main_menu() {
    clear
    echo -e "${PURPLE}"
    echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
    echo "‚ïë    üöÄ MINING MANAGER - HACKER MODE  ‚ïë"
    echo "‚ïë          AUTO CONFIG SYSTEM         ‚ïë"
    echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo -e "${NC}"
    
    echo -e "${CYAN}‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ‚ñÑ${NC}"
    echo -e "${GREEN}1. üèä VIPOR MINING (10 Pools)${NC}"
    echo -e "${GREEN}2. üçÄ LUCKPOOL MINING (10 Pools)${NC}"
    echo -e "${GREEN}3. üìä VIEW CURRENT CONFIG${NC}"
    echo -e "${GREEN}4. üö™ EXIT${NC}"
    echo -e "${CYAN}‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ‚ñÄ${NC}"
    echo -e "${YELLOW}üéÆ Select option (1-4): ${NC}"
}

# View current config
view_config() {
    clear
    echo -e "${CYAN}"
    echo "‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó"
    echo "‚ïë         CURRENT CONFIGURATION        ‚ïë"
    echo "‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù"
    echo -e "${NC}"
    
    if [ -f "$CONFIG_FILE" ]; then
        echo -e "${GREEN}üìÅ Config file found: $CONFIG_FILE${NC}"
        echo -e "\n${YELLOW}üìã Content:${NC}"
        cat "$CONFIG_FILE" | while read line; do
            echo -e "${BLUE}   $line${NC}"
        done
    else
        echo -e "${RED}‚ùå No config file found!${NC}"
    fi
    
    echo -e "\n${YELLOW}Press Enter to continue...${NC}"
    read
}

# Main program loop
main() {
    # Check if bc is installed for calculations
    if ! command -v bc &> /dev/null; then
        echo -e "${RED}‚ùå 'bc' command is required. Install with: sudo apt-get install bc${NC}"
        exit 1
    fi
    
    while true; do
        show_main_menu
        read -r choice
        
        case $choice in
            1)
                start_vipor_mining
                ;;
            2)
                start_luckpool_mining
                ;;
            3)
                view_config
                ;;
            4)
                echo -e "\n${GREEN}üëã Thank you for using Mining Manager!${NC}"
                echo -e "${PURPLE}üöÄ Happy Mining! üíé${NC}"
                exit 0
                ;;
            *)
                echo -e "${RED}‚ùå Invalid option! Please select 1-4${NC}"
                sleep 2
                ;;
        esac
        
        echo -e "\n${YELLOW}Press Enter to continue...${NC}"
        read
    done
}

# Start the program
main
